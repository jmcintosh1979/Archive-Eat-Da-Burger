<h1>Burgers!</h1>

<h2>Burgers to Devour</h2>

<ul>
  {{#each burger }}
    {{#unless devour}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers already Devoured</h2>

<ul>
  {{#each burger }}
    {{#unless devour}}
      {{> burger/burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  
  <div class="form-group">
    <label for="burger">New Burger:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devour" value="0" checked> Not Devoured!<br>
    <input type="radio" name="devour" value="1"> Devoured
  </div>

  <button type="submit">Add Burger</button>

</form>